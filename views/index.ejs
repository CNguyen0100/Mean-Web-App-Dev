<!-- views/pages/index.ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
    <% include ./head %>
    <script src="javascripts/phoAppContr.js"></script>
</head>
<body class="container" ng-app="phoApp">
  <header>
      <% include ./header %>
  </header>

  <main>
    <div class="jumbotron">
      <div>
        <h1>This is great</h1>
        <p>This is Pho API that Cuong is making</p>
      </div>
      <div id='main' ng-controller="reviewController">
        <form ng-Submit="post()">
          <div class="form-group">
            <input class="form-control" required type="text" placeholder="Your name" ng-model="newPost.created_by" />
            <textarea class="form-control" required maxlength="200" rows="3" placeholder="Say something" ng-model="newPost.text"></textarea>
            <button type="submit" class="btn btn-primary">Review</button>
          </div>
        </form>
        <div id="post-stream">
          <h4>Review Feed</h4>
          <div class='post' ng-repeat="post in posts | orderBy:'created_at':true" ng-class-odd="'odd'" ng-class-even="'even'">
            <p>{{post.created_by}} says {{post.text}} at {{post.created_at}}</p>
          </div>
        </div>
      </div>
    </div>
  </main>

  <footer>
      <% include ./footer %>
  </footer>
</body>
</html>
